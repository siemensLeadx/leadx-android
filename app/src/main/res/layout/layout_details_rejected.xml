<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_rejection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/l_toolbar"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_5sdp"
    android:visibility="gone"
    tools:visibility="visible">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        android:text="@string/reason"
        android:textColor="@color/black60"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        card_view:cardCornerRadius="@dimen/_8sdp"
        card_view:cardElevation="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_18sdp"
            android:paddingVertical="@dimen/_13sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="@dimen/_5sdp"
                card_view:cardElevation="@dimen/_1sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_lead_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:textColor="@color/black50"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    tools:background="@color/red"
                    tools:text="verified" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_reject_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="@color/black90"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="This request has been rejected because the lead out of our supported areas This request has been rejected" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/main_font_english</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="ThemeBlackStatusBar" parent="AppTheme">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="AlerterCustomTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/main_font_english</item>
    </style>

    <style name="DialogCustomTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HeaderFont">
        <item name="android:fontFamily">@font/header_font_en</item>
        <item name="fontFamily">@font/header_font_en</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_3sdp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:cursorVisible">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="TextInputEditTextStyleDisabled" parent="TextInputEditTextStyle">
        <item name="android:enabled">false</item>
        <item name="android:textColor">@drawable/disabled_edit_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">text|textMultiLine</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>